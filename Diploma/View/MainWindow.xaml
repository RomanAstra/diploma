<Window x:Class="Diploma.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:local="clr-namespace:Diploma"
        xmlns:viewModel="clr-namespace:Diploma.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="#333" ResizeMode="CanResizeWithGrip" WindowState="Maximized" FontFamily="Times New Roman">
    <Window.Resources>
        <viewModel:MainWindowViewModel x:Key="ViewModel"></viewModel:MainWindowViewModel>
    </Window.Resources>
    <Grid DataContext="{StaticResource ViewModel}">
        <StackPanel >
            <Menu Margin="10">
                <MenuItem Header="Фаил">
                    <MenuItem Header="Новый">
                        <MenuItem.Icon>
                            <Path Width="16" Height="16" Stretch="Fill" Fill="{StaticResource FillPath}" Data="{StaticResource new_windowStyle0}" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Command="Open" Header="Открыть"/>
                    <Separator/>
                    <MenuItem Header="Сохранить"/>
                </MenuItem>
                <MenuItem Header="Теоретический материал"/>
                <MenuItem Header="О программе" IsEnabled="False"/>
            </Menu>
        </StackPanel>
        <StackPanel Margin="10,32,-10,0" >
            <TabControl Margin="0,10,10,10" Height="361">
                <TabItem Header="Калькулятор бетонной смеси">
                    <WrapPanel Margin="0,0,217,0">
                        <Label Content="Необходимое количество бетона" Foreground="White"></Label>
                        <TextBox Text="{Binding ConcreteFormula, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                        <Label Content="Марка прочности:" Foreground="White"></Label>
                        <ComboBox ItemsSource="{Binding ConcreteFormula.BrandConcreteList}"
                                  Text="{Binding ConcreteFormula.BrandConcreteList, UpdateSourceTrigger=PropertyChanged}"
                                  DisplayMemberPath="Strength"
                                  SelectedValuePath="Strength" 
                                  SelectedItem="{Binding Path=CurrentBrandConcrete}"
                                  Margin="12" Height="28" Width="180"/>
                        <Label Content="Крупный заполнитель:" Foreground="White"></Label>
                        <ComboBox Margin="12" Height="28" Width="180"/>
                        <Label Content="Мелкий заполнитель:" Foreground="White"></Label>
                        <ComboBox Margin="12" Height="28" Width="180"/>
                        <Label Content="Марка цемента:" Foreground="White"></Label>
                        <ComboBox Margin="12" Height="28" Width="180"/>
                        <Label Content="Подвижность смеси:" Foreground="White"></Label>
                        <ComboBox Margin="12" Height="28" Width="180"/>
                        <Label Content="Пластификатор:" Foreground="White"></Label>
                        <ComboBox Margin="12" Height="28" Width="180"/>
                        <ComboBox Margin="12" Height="28" Width="180">
                            <ComboBoxItem Content="Normal" IsSelected="True"/>
                            <ComboBoxItem Content="Яблоко" />
                            <ComboBoxItem Content="Арбуз" />
                            <ComboBoxItem Content="Апельсин" />
                            <ComboBoxItem Content="Гранат" />
                            <ComboBoxItem Content="Банан" />
                        </ComboBox>
                        <Button Content="Подсчитать" Height="33"  Command="{Binding Test}"></Button>
                    </WrapPanel>
                </TabItem>
                <TabItem Header="Дополнительный материал">
                    <StackPanel>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </StackPanel>
    </Grid>
</Window>

